generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  ownedApps App[] @relation(name: "owner")
  apps AppUser[] @relation(name: "users")
  roles UserRole[] @default([USER])
}

model AppUser {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user User @relation(name: "users",fields: [userId], references: [id])
  appId String @db.ObjectId
  app App @relation(name: "users",fields: [appId], references: [id])
}

model App {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  appSecret String @default(uuid())
  origins String[]
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  ownerId String @db.ObjectId
  owner User @relation(name: "owner",fields: [ownerId], references: [id])
  apps AppUser[] @relation(name: "users")
  tags Tag[] @relation()
}

model Tag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  appId String @db.ObjectId
  app App @relation(fields: [appId], references: [id])
  analytics Analytics[] @relation()
}

model Analytics {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  clientId String?
  sessionId String?
  service String?
  eventName String
  url String
  userAgent String?
  ip String?
  date DateTime
  customData Json?
  appId String? @db.ObjectId
  tagId String? @db.ObjectId
  tag Tag? @relation(fields: [tagId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}